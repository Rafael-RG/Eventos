<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Eventos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Eventos"
    xmlns:pages="clr-namespace:Eventos.Pages"
    FlyoutHeaderBehavior="CollapseOnScroll"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarIsVisible="True">

    <TabBar>
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HomePage}" Route="HomePage"/>
        </Tab>
        <Tab Title="Nuevo" Icon="add.png">
            <ShellContent ContentTemplate="{DataTemplate pages:AddEventPage}" Route="AddEventPage"/>
        </Tab>
        <Tab Title="Historial" Icon="history.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HistoryPage}" Route="HistoryPage"/>
        </Tab>
        <Tab Title="Configuracion" Icon="setting.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" Route="SettingsPage"/>
        </Tab>
    </TabBar>


    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />

</Shell>
