<?xml version="1.0" encoding="utf-8" ?>
<pages:BaseContentPage
    x:Class="Eventos.Pages.LoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:extensions="clr-namespace:Eventos.Extensions"
    xmlns:pages="clr-namespace:Eventos.Common.Pages;assembly=Eventos.Common"
    xmlns:viewModels="clr-namespace:Eventos.ViewModels"
    x:DataType="viewModels:LoginViewModel"
    x:TypeArguments="viewModels:LoginViewModel"
    Shell.TabBarIsVisible="False"
    Shell.NavBarIsVisible="false">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="Center">

        <StackLayout Margin="0,12,0,0" HeightRequest="32">
            <ActivityIndicator
                HeightRequest="32"
                IsRunning="True"
                IsVisible="{Binding IsBusy}"
                WidthRequest="32" />
        </StackLayout>

        <Button
            TextColor="Black"
            Command="{Binding LoginWithGoogleCommand}"
            Text="Iniciar con Google" />

    </StackLayout>

</pages:BaseContentPage>
